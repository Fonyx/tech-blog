<header>
    <nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo left">{{uppercase post.title}} BY 
                {{#if user_is_owner}}
                    YOU
                {{else}}
                    {{uppercase post.owner.username}}
                {{/if}}
                </a>
            <ul class="right hide-on-med-and-down">
                <li><a class="right" href="/">DASHBOARD</a></li>
                {{#if logged_in}}
                    <li><a href="/profile" id="profile-link">PROFILE</a></li>
                    <li><a href="/logout" id="logout-redirect">LOGOUT</a></li>
                    {{#if user_is_owner}}
                        <li><a href="/post/update/{{post.id}}" id="update-post-redirect">UPDATE POST</a></li>
                    {{/if}}
                {{else}}
                    <li><a href="/login" id="login-redirect">LOGIN</a></li>
                    <li><a href="/signup" id="signup-redirect">SIGNUP</a></li>
                {{/if}}
            </ul>
            <ul id="nav-mobile" class="sidenav sec_text_color">
                <li><a href="/">DASHBOARD</a></li>
                {{#if logged_in}}
                    <li><a href="/profile" id="profile-link">PROFILE</a></li>
                    <li><a href="/logout" id="logout-redirect">LOGOUT</a></li>
                    {{#if user_is_owner}}
                        <li><a href="/post/update/{{post.id}}" id="update-post-redirect">UPDATE POST</a></li>
                    {{/if}}
                {{else}}
                    <li><a href="/login" id="login-redirect">LOGIN</a></li>
                    <li><a href="/signup" id="signup-redirect">SIGNUP</a></li>
                {{/if}}
            </ul>
            <a href="#" data-target="nav-mobile" class="sidenav-trigger right"><i class="material-icons">menu</i></a>
        </div>
  </nav>
</header>
<main>
    <br>
        
        {{#with post}}
            {{> post-detail-full}}
        {{/with}}
        <div class="container center-align">
            {{#unless user_is_owner}}
                <a class="btn" href="/post/{{post.id}}/comment/">ADD COMMENT</a>
            {{else}}
                <p class="red-text" href="#">COMMENTS ON YOUR POST</p>
            {{/unless}}
        </div>
        <br>

        {{#each post.comments as |comment|}}
            {{> comment-detail}}
        {{/each}}
</main>