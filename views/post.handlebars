<header>
  <h1>Individual Post</h1>
  <nav>
    {{#if logged_in}}
        <a class="btn" id="logout">logout</a>
        {{#if user_is_owner}}
            <a class="btn" href="/post/update/{{post.id}}" id="update-post-redirect">update</a>
        {{/if}}
    {{else}}
        <a class="btn" href="/login" id="login-redirect">login</a>
        <a class="btn" href="/signup" id="signup-redirect">signup</a>
    {{/if}}
        <a class="btn" href="/">home</a>
  </nav>
</header>
<main>
    <div class="card">
        <h3>{{post.owner.username}}</h3>
        <div class="card-title">
            <h2>{{post.title}}</h2>
        </div>
        <div class="card-content">
            <p>{{post.content}}</p>
        </div>
    </div>

    {{#each post.comments as |comment|}}
        {{> comment-detail}}
    {{/each}}
    {{#each post.tags as |tag|}}
        {{> tag-detail}}
    {{/each}}
</main>