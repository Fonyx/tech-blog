<header>
  <h1>Individual Post</h1>
  {{#if logged_in}}
      <nav>
        <button class="btn" id="logout">logout</button>
      </nav>
  {{else}}
      <nav>
        <a class="btn" href="/login" id="login-redirect">login</a>
        <a class="btn" href="/signup" id="signup-redirect">signup</a>
      </nav>
  {{/if}}
</header>
<main>
    <div class="col-md-6">
        {{#if post}}
            <h2>Update Post</h2>
        {{else}}
            <h2>New Post</h2>
        {{/if}}
        <form class="form create-post-form">
            <div class="form-group">
                <label for="title-create-post">Title</label>
                <input class="form-input" type="text" id="title-create-post" value="{{post.title}}"/>
            </div>
            <div class="form-group">
                <label for="content-create-post">Content</label>
                <input class="form-input" type="text" id="content-create-post" value="{{post.content}}"/>
            </div>
            <div class="form-group">
                <label for="tags-create-post">Tags</label>
                <input class="form-input" type="text" id="tags-create-post" value="{{stringify post.tags}}"/>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Post</button>
            </div>
            <div class="form-group">
                <a href="/" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>

  <script src="/js/create-post.js"></script>
</main>