<header>
    <nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo center">POST COMMENT</a>
            <ul class="right hide-on-med-and-down">
                <li>
                    <a href="#" onclick="window.history.back()">BACK</a>
                </li>
            </ul>
            <ul id="nav-mobile" class="sidenav sec_text_color">
                <li>
                    <a href="#" onclick="window.history.back()">BACK</a>
                </li>
            </ul>
            <a href="#" data-target="nav-mobile" class="sidenav-trigger right"><i class="material-icons">menu</i></a>
        </div>
    </nav>
</header>
<main class="valign-wrapper">
    <div class="container">
        {{#with post}}
            {{> post-detail-full}}
        {{/with}}
        <br>

        {{#if commenter_is_comment_owner}}
        {{!-- enable the user to update and delete the post --}}
            <div class="col-md-6">
                <form class="form update-comment-form">
                    <div class="form-group">
                        <label for="content-update-comment">Content</label>
                        <input class="form-input" type="text" id="content-update-comment" data-post_id="{{post.id}}" data-comment_id="{{comment.id}}" value="{{comment.content}}"/>
                    </div>
                    <div class="form-group row center-align">
                        <button class="btn" type="submit">UPDATE</button>
                        <a href="/comment/update/delete/{{comment.id}}" class="btn btn-primary red">DELETE</a>
                    </div>
                </form>
            </div>
        {{else}}
        {{!-- just display the comment --}}
            <div class="row">
                <div class="col s6"></div>
                    <div class="card grey lighten-3">
                        <div class="card-content black-text">
                            <span class="card-title red-black center-align">{{comment.content}}</span>
                            <span class="card-content">Comment: {{format_date comment.created}} - {{commentOwner.username}}</span>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}

    </div>

  <script src="/js/update-comment.js"></script>
</main>